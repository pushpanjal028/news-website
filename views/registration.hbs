<div class="containerlogin">
    <h1 class="head">Registration</h1>
    <form action="./registration" method="post" onsubmit="showAlert(event)">
        <div class="form-group">
            <label for="reg_type">Registration Type</label>
            <select class="form-control" id="reg_type" name="occupation" required>
                <option value="General">General</option>
                <option value="Citizen Reporter">Citizen Reporter</option>
                <option value="Reporter">Reporter</option>
                <option value="Student Reporter">Student Reporter</option>
                <option value="Webportal Reporter">Webportal Reporter</option>
            </select>
        </div>
        <div class="form-group">
            <label for="First">First Name</label>
            <input type="text" name="firstname" id="First" required>
        </div>
        <div class="form-group">
            <label for="last">Last Name</label>
            <input type="text" name="lastname" id="last" required>
        </div>
        <div class="form-group">
            <label for="birth">Date of Birth</label>
            <input type="date" name="dateOfBirth" id="birth" required>
        </div>
        <div class="form-group">
            <label>Gender</label>
            <input type="radio" name="gender" value="male" required> Male
            <input type="radio" name="gender" value="female" required> Female
        </div>
        <div class="form-group">
            <label for="number">Mobile Number</label>
            <input type="number" name="phoneNumber" id="number" required>
        </div>
        <div class="form-group">
            <label for="wp_number">WhatsApp Number</label>
            <input type="number" name="whatsappNumber" id="wp_number" required>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" id="email" required>
        </div>
        <div class="password-container">
            <label for="passwordField">Password</label>
            <input type="password" name="password" class="password-input" id="passwordField"
                placeholder="Enter Password">
            <span class="toggle-icon" id="toggleIcon" onclick="togglePasswordVisibility()">üëÅÔ∏è</span>
        </div>
        <div class="form-group">
            <label for="confirm_pass">Confirm Password</label>
            <input type="password" name="confirmpassword" id="confirm_pass" required>
        </div>
        <div class="form-group">
            <label for="Add">Postal Address</label>
            <input type="text" name="address" id="Add" required>
        </div>
        <div class="form-group">
            <label for="country">Country</label>
            <select name="country" id="country" required>
                <option value="india">India</option>
                <option value="other country">Other Country</option>
            </select>
        </div>
        <div class="form-group">
            <label for="stat">State</label>
            <input type="text" name="state" id="stat" required>
        </div>
        <div class="form-group">
            <label for="dist">District</label>
            <input type="text" name="District" id="dist" required>
        </div>
        <div class="form-group">
            <label for="city">City/Town</label>
            <input type="text" name="city" id="city" required>
        </div>
        <div class="form-group">
            <label for="pin">Pincode</label>
            <input type="number" name="zip" id="pin" required>
        </div>
        <div class="form-group">
            <label for="Adha">Aadhar Number</label>
            <input type="number" name="adharNumber" id="Adha" required>
        </div>
        <div class="form-group">
            <label for="pan">PAN Number</label>
            <input type="number" name="pan" id="pan" required>
        </div>
        <div class="form-group">
            <label for="intro">Your Brief Introduction</label><br>
            <textarea name="intro" id="intro" cols="30" rows="10"></textarea>
        </div>
        <div class="button2">
            <button type="submit" onclick="openPopup()"> Submit </button>
            <div class="popup-submit" id="popup-submit">
                <img src="/static/images/checkmark-png-28.png" class="popupimg">
                <h2>Thank you!</h2>
                <p>Your details has been Successfully submitted. Thankyou!</p>
                <button id="btn4" type="button" onclick="closePopup()">Ok</button>

            </div>
        </div>
    </form>
</div> 



