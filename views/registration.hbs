<script>
    function showAlert(event) {
        event.preventDefault(); // Prevent form submission for now

        // Collect form data
        const regType = document.getElementById('reg_type').value;
        const firstName = document.getElementById('First').value;
        const lastName = document.getElementById('last').value;
        const phoneNumber = document.getElementById('number').value;
        // Repeat this for other form fields...

        // Display alert with form data
        
        alert(`Registration Successful!\nRegistration Type: ${regType}\nFirst Name: ${firstName}\nLast Name: ${lastName}\nPhone Number: ${phoneNumber}`);

        // Optionally, you can submit the form after showing the alert
        event.currentTarget.submit();
    }

</script>

